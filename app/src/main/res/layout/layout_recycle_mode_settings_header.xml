<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_setting_item"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/pd_md"
    android:paddingBottom="@dimen/pd_md">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/text_recycle_mode"
        android:textColor="#777"
        android:textSize="@dimen/ts_common" />


    <ImageButton
        android:id="@+id/ib_expand_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/icon_unfold" />

</LinearLayout>