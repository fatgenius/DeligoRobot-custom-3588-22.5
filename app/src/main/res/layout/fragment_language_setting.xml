<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/pd_md"
    android:paddingTop="@dimen/pd_md"
    android:paddingEnd="@dimen/pd_md"
    android:paddingBottom="@dimen/pd_md">

    <LinearLayout
        android:id="@+id/ll_switch_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_setting_item"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/pd_md"
        android:paddingBottom="@dimen/pd_md">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_switch_language"
            android:textColor="#777"
            android:textSize="@dimen/ts_common" />

        <ImageButton
            android:id="@+id/ib_expand_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/icon_unfold" />

    </LinearLayout>

</LinearLayout>
