<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:gravity="center">

    <!--左侧机器人-->
    <RelativeLayout
        android:id="@+id/ll_robot_level"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.34"
        android:clipChildren="false"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="@dimen/mr_md"
            android:background="@drawable/icon_mode_background"
            android:gravity="top|center_horizontal"
            android:paddingStart="@dimen/pd_md"
            android:paddingEnd="@dimen/pd_md">

            <TextView
                android:id="@+id/tv_mode_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/icon_cake"
                android:drawablePadding="@dimen/pd_sm"
                android:gravity="center"
                android:text="@string/text_birthday_mode"
                android:textColor="#008dfa"
                android:textSize="@dimen/ts_md" />
        </LinearLayout>

        <View
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_robot_outline_three_layers" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="70dp"
            android:paddingEnd="@dimen/pd_xs">

            <TextView
                android:id="@+id/tv_layer_one"
                android:layout_width="160dp"
                android:layout_height="70dp"
                android:background="@drawable/bg_layer_birthday_selected"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="@dimen/ts_md" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/iv_indicator_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:src="@drawable/gif_indicator" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="245dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="70dp"
            android:paddingEnd="@dimen/pd_xs">

            <TextView
                android:id="@+id/tv_layer_two"
                android:layout_width="150dp"
                android:layout_height="54dp"
                android:background="@drawable/bg_layer_normal"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="@dimen/ts_md" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/iv_indicator_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:src="@drawable/gif_indicator"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="340dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="70dp"
            android:paddingEnd="@dimen/pd_xs">

            <TextView
                android:id="@+id/tv_layer_three"
                android:layout_width="150dp"
                android:layout_height="54dp"
                android:background="@drawable/bg_layer_normal"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="@dimen/ts_md" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/iv_indicator_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:src="@drawable/gif_indicator"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>

    <!--右侧配送点位-->
    <LinearLayout
        android:id="@+id/ll_right_panel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/mr_lg"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/pd_lg"
        android:paddingTop="@dimen/pd_xs"
        android:paddingRight="@dimen/pd_lg"
        android:paddingBottom="@dimen/pd_lg">

        <TextView
            android:id="@+id/tv_current_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#efefef"
            android:textSize="40sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="70dp"
            android:src="@drawable/icon_birthday_cake_large" />

        <Button
            android:id="@+id/btn_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_start_btn"
            android:text="@string/text_complete_countdown"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/ts_xl" />

    </LinearLayout>

</LinearLayout>
