<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BasicSettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingStart="@dimen/pd_lg"
        android:paddingTop="@dimen/pd_xs"
        android:paddingEnd="@dimen/pd_lg"
        android:paddingBottom="@dimen/pd_md">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/pd_sm"
            android:paddingBottom="@dimen/pd_sm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_volume_setting"
                android:textColor="@android:color/white"
                android:textSize="@dimen/ts_lg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mr_sm"
                android:background="@drawable/bg_setting_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/pd_sm"
                android:paddingBottom="@dimen/pd_sm">

                <ImageButton
                    android:id="@+id/ib_decrease_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackground"
                    android:padding="@dimen/pd_lg"
                    android:src="@drawable/icon_subtract" />

                <com.warkiz.widget.IndicatorSeekBar
                    android:id="@+id/isb_volume"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    app:isb_indicator_color="#66CCFF"
                    app:isb_indicator_text_color="@android:color/white"
                    app:isb_indicator_text_size="18sp"
                    app:isb_max="15"
                    app:isb_min="0"
                    app:isb_only_thumb_draggable="true"
                    app:isb_seek_smoothly="true"
                    app:isb_show_indicator="rounded_rectangle"
                    app:isb_show_thumb_text="true"
                    app:isb_thumb_color="#66CCFF"
                    app:isb_thumb_size="24dp"
                    app:isb_thumb_text_color="#66CCFF"
                    app:isb_track_background_color="#eeeeee"
                    app:isb_track_background_size="4dp"
                    app:isb_track_progress_color="#66CCFF"
                    app:isb_track_progress_size="4dp" />

                <ImageButton
                    android:id="@+id/ib_increase_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackground"
                    android:padding="@dimen/pd_lg"
                    android:src="@drawable/icon_add" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/pd_sm"
            android:paddingBottom="@dimen/pd_sm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_brightness_setting"
                android:textColor="@android:color/white"
                android:textSize="@dimen/ts_lg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mr_sm"
                android:background="@drawable/bg_setting_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/pd_sm"
                android:paddingBottom="@dimen/pd_sm">

                <ImageButton
                    android:id="@+id/ib_decrease_brightness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackground"
                    android:padding="@dimen/pd_lg"
                    android:src="@drawable/icon_subtract" />

                <com.warkiz.widget.IndicatorSeekBar
                    android:id="@+id/isb_brightness"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    app:isb_indicator_color="#66CCFF"
                    app:isb_indicator_text_color="@android:color/white"
                    app:isb_indicator_text_size="18sp"
                    app:isb_max="100"
                    app:isb_min="0"
                    app:isb_only_thumb_draggable="true"
                    app:isb_seek_smoothly="true"
                    app:isb_show_indicator="rounded_rectangle"
                    app:isb_show_thumb_text="true"
                    app:isb_thumb_color="#66CCFF"
                    app:isb_thumb_size="24dp"
                    app:isb_thumb_text_color="#66CCFF"
                    app:isb_track_background_color="#eeeeee"
                    app:isb_track_background_size="4dp"
                    app:isb_track_progress_color="#66CCFF"
                    app:isb_track_progress_size="4dp" />

                <ImageButton
                    android:id="@+id/ib_increase_brightness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackground"
                    android:padding="@dimen/pd_lg"
                    android:src="@drawable/icon_add" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/pd_sm"
            android:paddingBottom="@dimen/pd_sm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_low_power_setting"
                android:textColor="@android:color/white"
                android:textSize="@dimen/ts_lg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mr_sm"
                android:background="@drawable/bg_setting_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/pd_sm"
                android:paddingBottom="@dimen/pd_sm">

                <ImageButton
                    android:id="@+id/ib_decrease_power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackground"
                    android:padding="@dimen/pd_lg"
                    android:src="@drawable/icon_subtract" />

                <com.warkiz.widget.IndicatorSeekBar
                    android:id="@+id/isb_power"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    app:isb_indicator_color="#66CCFF"
                    app:isb_indicator_text_color="@android:color/white"
                    app:isb_indicator_text_size="18sp"
                    app:isb_max="100"
                    app:isb_min="0"
                    app:isb_only_thumb_draggable="true"
                    app:isb_seek_smoothly="true"
                    app:isb_show_indicator="rounded_rectangle"
                    app:isb_show_thumb_text="true"
                    app:isb_thumb_color="#66CCFF"
                    app:isb_thumb_size="24dp"
                    app:isb_thumb_text_color="#66CCFF"
                    app:isb_track_background_color="#eeeeee"
                    app:isb_track_background_size="4dp"
                    app:isb_track_progress_color="#66CCFF"
                    app:isb_track_progress_size="4dp" />

                <ImageButton
                    android:id="@+id/ib_increase_power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackground"
                    android:padding="@dimen/pd_lg"
                    android:src="@drawable/icon_add" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_encounter_obstacle_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/pd_xs"
            android:paddingBottom="@dimen/pd_xs">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_encounter_obstacle_prompt"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/ts_lg" />

                <ImageButton
                    android:id="@+id/ib_add_encounter_obstacle_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingLeft="@dimen/pd_md"
                    android:src="@drawable/icon_add_item" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mr_sm"
                android:background="@drawable/bg_setting_item"
                android:clipChildren="false"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingTop="@dimen/pd_sm"
                android:paddingBottom="@dimen/pd_sm">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/pd_xs"
                    android:paddingBottom="@dimen/pd_xs">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/text_enable_encounter_obstacle_prompt"
                        android:textSize="@dimen/ts_lg" />

                    <com.kyleduo.switchbutton.SwitchButton
                        android:id="@+id/sw_enable_obstacle_prompt"
                        style="@style/SwitchButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="-10dp"
                        android:checked="true"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/ts_md"
                        app:kswBackColor="@android:color/holo_blue_dark"
                        app:kswTextAdjust="-2dp"
                        app:kswTextExtra="8dp"
                        app:kswTextOff="ON"
                        app:kswTextOn="OFF"
                        app:kswThumbColor="@android:color/white"
                        app:kswThumbHeight="30dp"
                        app:kswThumbWidth="35dp" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_obstacle_prompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/pd_sm"
            android:paddingBottom="@dimen/pd_sm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_navigation_model_setting"
                android:textColor="@android:color/white"
                android:textSize="@dimen/ts_lg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mr_sm"
                android:background="@drawable/bg_setting_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/pd_sm"
                android:paddingBottom="@dimen/pd_sm">

                <RadioGroup
                    android:id="@+id/rg_setting_navigation_model_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_auto_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#66CCFF"
                        android:checked="true"
                        android:text="@string/text_auto_model"
                        android:textColor="#777"
                        android:textSize="@dimen/ts_lg" />

                    <RadioButton
                        android:id="@+id/rb_fix_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/mr_lg"
                        android:backgroundTint="#66CCFF"
                        android:text="@string/text_fix_model"
                        android:textColor="#777"
                        android:textSize="@dimen/ts_lg" />

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/pd_sm"
            android:paddingBottom="@dimen/pd_sm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_setting_password"
                android:textColor="@android:color/white"
                android:textSize="@dimen/ts_lg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mr_sm"
                android:background="@drawable/bg_setting_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/pd_sm"
                android:paddingBottom="@dimen/pd_sm">

                <RadioGroup
                    android:id="@+id/rg_setting_password_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_open_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#66CCFF"
                        android:checked="true"
                        android:text="@string/text_open"
                        android:textColor="#777"
                        android:textSize="@dimen/ts_lg" />

                    <RadioButton
                        android:id="@+id/rb_close_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/mr_lg"
                        android:backgroundTint="#66CCFF"
                        android:text="@string/text_close"
                        android:textColor="#777"
                        android:textSize="@dimen/ts_lg" />

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/pd_sm"
            android:paddingBottom="@dimen/pd_sm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_display_content_during_delivery"
                android:textColor="@android:color/white"
                android:textSize="@dimen/ts_lg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mr_sm"
                android:background="@drawable/bg_setting_item"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingTop="@dimen/pd_sm"
                android:paddingBottom="@dimen/pd_sm">

                <RadioGroup
                    android:id="@+id/rg_display_content_during_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_display_expression"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#66CCFF"
                        android:checked="true"
                        android:text="@string/text_display_expression"
                        android:textColor="#777"
                        android:textSize="@dimen/ts_lg" />

                    <RadioButton
                        android:id="@+id/rb_display_target_table"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/mr_lg"
                        android:backgroundTint="#66CCFF"
                        android:text="@string/text_display_target_table"
                        android:textColor="#777"
                        android:textSize="@dimen/ts_lg" />

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/pd_sm"
            android:paddingBottom="@dimen/pd_sm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_display_expression"
                android:textColor="@android:color/white"
                android:textSize="@dimen/ts_lg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mr_sm"
                android:background="@drawable/bg_setting_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/pd_sm"
                android:paddingBottom="@dimen/pd_sm">

                <TextView
                    android:id="@+id/tv_animation"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/icon_drop_down"
                    android:paddingTop="@dimen/pd_sm"
                    android:paddingBottom="@dimen/pd_sm"
                    android:textColor="#777"
                    android:textSize="@dimen/ts_lg"/>

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/gif_animation_preview"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="50dp"
                    android:scaleType="fitCenter" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/pd_sm"
            android:paddingBottom="@dimen/pd_sm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_table_placement"
                android:textColor="@android:color/white"
                android:textSize="@dimen/ts_lg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mr_sm"
                android:background="@drawable/bg_setting_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/pd_sm"
                android:paddingBottom="@dimen/pd_sm">

                <RadioGroup
                    android:id="@+id/rg_column_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_three_column"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#66CCFF"
                        android:text="@string/text_three_column"
                        android:textColor="#777"
                        android:textSize="@dimen/ts_lg" />

                    <RadioButton
                        android:id="@+id/rb_four_column"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/mr_lg"
                        android:backgroundTint="#66CCFF"
                        android:text="@string/text_four_column"
                        android:textColor="#777"
                        android:textSize="@dimen/ts_lg" />

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/pd_sm"
            android:paddingBottom="@dimen/pd_sm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_table_layers"
                android:textColor="@android:color/white"
                android:textSize="@dimen/ts_lg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mr_sm"
                android:background="@drawable/bg_setting_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/pd_sm"
                android:paddingBottom="@dimen/pd_sm">

                <RadioGroup
                    android:id="@+id/rg_table_layers_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_three_layers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#66CCFF"
                        android:text="@string/text_three_layers"
                        android:textColor="#777"
                        android:textSize="@dimen/ts_lg" />

                    <RadioButton
                        android:id="@+id/rb_four_layers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/mr_lg"
                        android:backgroundTint="#66CCFF"
                        android:text="@string/text_four_layers"
                        android:textColor="#777"
                        android:textSize="@dimen/ts_lg" />

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/pd_sm"
            android:paddingBottom="@dimen/pd_sm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_data_synchronization"
                android:textColor="@android:color/white"
                android:textSize="@dimen/ts_lg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mr_sm"
                android:background="@drawable/bg_setting_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/pd_sm"
                android:paddingBottom="@dimen/pd_sm">

                <RadioGroup
                    android:id="@+id/rg_data_sync_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_domestic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#66CCFF"
                        android:text="@string/text_domestic"
                        android:textColor="#777"
                        android:textSize="@dimen/ts_lg" />

                    <RadioButton
                        android:id="@+id/rb_foreign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:backgroundTint="#66CCFF"
                        android:checked="true"
                        android:text="@string/text_foreign"
                        android:textColor="#777"
                        android:textSize="@dimen/ts_lg" />

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/pd_sm"
            android:paddingBottom="@dimen/pd_sm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_relocate"
                android:textColor="@android:color/white"
                android:textSize="@dimen/ts_lg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mr_sm"
                android:background="@drawable/bg_setting_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/pd_sm"
                android:paddingBottom="@dimen/pd_sm">

                <RadioGroup
                    android:id="@+id/rg_relocate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/mr_md"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <RadioButton
                        android:id="@+id/rb_relocate_charge_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/mr_sm"
                        android:backgroundTint="#66CCFF"
                        android:checked="true"
                        android:text="@string/text_charge_point"
                        android:textColor="#777"
                        android:textSize="@dimen/ts_lg" />

                    <RadioButton
                        android:id="@+id/rb_relocate_product_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/mr_md"
                        android:backgroundTint="#66CCFF"
                        android:text="@string/text_product_point"
                        android:textColor="#777"
                        android:textSize="@dimen/ts_lg" />

                </RadioGroup>

                <Button
                    android:id="@+id/btn_relocate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_common_button"
                    android:text="@string/text_relocate"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/ts_lg" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/pd_sm"
            android:paddingBottom="@dimen/pd_sm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_switch_map"
                android:textColor="@android:color/white"
